<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7CB342">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#43A047"
                android:elevation="4dp"
                android:text="@string/checkpoints"
                android:textSize="24sp" />

            <Button
                android:id="@+id/createCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/create_checkpoint" />

            <Button
                android:id="@+id/deleteCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/delete_checkpoint" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#43A047"
                android:elevation="4dp"
                android:text="@string/data_transfer"
                android:textSize="24sp" />

            <Button
                android:id="@+id/transferCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/transfer_checkpoint" />

            <Button
                android:id="@+id/receiveCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/receive_checkpoint" />

            <Button
                android:id="@+id/exportJsonButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/export_data_as_json" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#43A047"
                android:elevation="4dp"
                android:text="@string/start_new_race"
                android:textSize="24sp" />

            <Button
                android:id="@+id/deleteAllCheckpoints"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/delete_all_new_race" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>