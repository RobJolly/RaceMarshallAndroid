<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7CB342">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#43A047"
                android:elevation="4dp"
                android:text="Checkpoints"
                android:textSize="24sp" />

            <Button
                android:id="@+id/createCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Create Checkpoint" />

            <Button
                android:id="@+id/deleteCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Delete Checkpoint" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#43A047"
                android:elevation="4dp"
                android:text="Data Transfer"
                android:textSize="24sp" />

            <Button
                android:id="@+id/transferCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Transfer Checkpoint" />

            <Button
                android:id="@+id/receiveCheckpointButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Receive Checkpoint" />

            <Button
                android:id="@+id/exportJsonButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Export Data (As JSON)" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#43A047"
                android:elevation="4dp"
                android:text="Start New Race"
                android:textSize="24sp" />

            <Button
                android:id="@+id/deleteAllCheckpoints"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Delete All (New Race)" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>