<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <TextView
        android:id="@+id/timeTextView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="(dropped out: 12:00:00)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerical70pc"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerical20pc"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal66pc" />

    <CheckBox
        android:id="@+id/reportedCheckBox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/listChoiceIndicatorMultiple"
        android:button="@null"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal90pc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerical70pc"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal10pc" />

    <TextView
        android:id="@+id/timeTextView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="(in: 19:00:00)"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal33pc"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerical70pc"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerical20pc"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeTextView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="(out:12:00:00)"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal66pc"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerical70pc"
        app:layout_constraintStart_toStartOf="@+id/guidelineVerical20pc"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal33pc" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal33pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.33" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal66pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerical20pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerical70pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />

    <Button
        android:id="@+id/racerNumberButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/guidelineHorizontal90pc"
        app:layout_constraintEnd_toStartOf="@+id/guidelineVerical20pc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineHorizontal10pc" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal10pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontal90pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="2dp" />
</androidx.constraintlayout.widget.ConstraintLayout>